{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(levelname)s: %(message)s"
        },
        "detailed": {
            "datefmt": "%Y-%m-%d%T%H:%M%S%z",
            "format": "[%(levelname)s|%(module)s|Line %(lineno)d] %(asctime)s: %(message)s"
        }
    },
    "filters": {
        "no_libraries": {
            "()": "utils.ctl_logging.NoExternalLibraryFilter"
        }
    },
    "handlers": {
        "stdout": {
            "level": "INFO",
            "formatter": "detailed",
            "filters": ["no_libraries"],
            "stream": "ext://sys.stdout",
            "class": "logging.StreamHandler"
        },
        "stderr": {
            "level": "WARNING",
            "formatter": "simple",
            "filters": ["no_libraries"],
            "stream": "ext://sys.stderr",
            "class": "logging.StreamHandler"
        },
        "file": {
            "level": "INFO",
            "backupCount": 3,
            "maxBytes": 10000000,
            "formatter": "detailed",
            "filters": ["no_libraries"],
            "filename": "logs/ctldl.log",
            "class": "logging.handlers.RotatingFileHandler"
        }
    },
    "loggers": {
        "root": {
            "level": "INFO",
            "handlers": ["stdout", "stderr", "file"]
        }
    }
}
